<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:toolkit="http://schemas.microsoft.com/dotnet/2022/maui/toolkit"
             x:Class="BrightChoices.videotest"
             Title="videotest">
    <ScrollView>
    <VerticalStackLayout>
        <toolkit:MediaElement
            Source="https://youtu.be/LjhCEhWiKXk.mp4"
            ShouldAutoPlay="True"
            ShouldLoopPlayback="True"
            WidthRequest="500"
            HeightRequest="400"
            />
        <toolkit:MediaElement
            x:Name="media"
            ShouldAutoPlay="True"
            ShouldLoopPlayback="True"
            WidthRequest="500"
            HeightRequest="400"
            />
            <Button x:Name="play" Clicked="play_Clicked" />

        </VerticalStackLayout>
    </ScrollView>
</ContentPage>